@model IEnumerable<SweetShopProject.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<style>
.btn {
  border: none;
  color: white;
  padding: 10px 20px;
  font-size: 16px;
  cursor: pointer;
}

.success {background-color: #04AA6D;}
.success:hover {background-color: #46a049;}


.warning {background-color: #ff9800;} 
.warning:hover {background: #e68a00;}

.danger {background-color: #f44336;} 
.danger:hover {background: #da190b;}

</style>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.imgpath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantity)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.cat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.city)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
              <td>
                <img src="~/@item.imgpath" width="100" height="100">

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prodName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>
         
            <td>
                @Html.DisplayFor(modelItem => item.cat.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.city.id)
            </td>
           
            <td>
               <button type="button" class="btn btn-outline-success">
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.id">Edit</a>

                <button type="button" class="btn btn-outline-warning">
                <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.id">Details</a>

                <button type="button" class="btn btn-outline-danger">
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

