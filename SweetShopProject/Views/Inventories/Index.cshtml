@model IEnumerable<SweetShopProject.Models.Inventory>

@{
    ViewData["Title"] = "Inventory";
}

<style>
.btn {
  border: none;
  color: white;
  padding: 10px 20px;
  font-size: 16px;
  cursor: pointer;
}

.success {background-color: #04AA6D;}
.success:hover {background-color: #46a049;}


.warning {background-color: #ff9800;} 
.warning:hover {background: #e68a00;}

.danger {background-color: #f44336;} 
.danger:hover {background: #da190b;}

</style>
<h1>Inventory Items</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.quantityAvail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.totalQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.totalSold)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody> 
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.quantityAvail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalSold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prod.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cat.id)
            </td>
            <td>
                 <button type="button" class="btn btn-outline-success">
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.id">Edit</a>

                <button type="button" class="btn btn-outline-warning">
                <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.id">Details</a>

                <button type="button" class="btn btn-outline-danger">
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
