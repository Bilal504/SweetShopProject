@model IEnumerable<SweetShopProject.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">


<div class="text-center">
    <h1 style="color: #d54d7b; font-family:Great Vibes, cursive; font-size: 105px; line-height: 100px; font-weight: normal; margin-bottom: 0px; margin-top: 40px; text-align: center; text-shadow: 0 1px 1px #fff;" class="display-4">Welcome</h1>
    <h2 class="display-7">We are Here to Serve you.</h2>
    
</div>


<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://cdn.shopify.com/s/files/1/0447/0521/8721/files/Generic-festive-banner_1920x725_a0c67852-4de2-449e-adf2-df8a7401fd8a_2000x.jpg?v=1617458968" style="height:400px" class="d-block w-100" alt="">
    </div>
    <div class="carousel-item">
      <img src="http://gmbchirawa.weebly.com/uploads/1/1/9/8/119813788/ganesh-misthan-bhandar-banner_orig.jpg" style="height:400px" class="d-block w-100" alt="">
    </div>
    <div class="carousel-item">
      <img src="https://assets.limetray.com/assets/image_manager/uploads/7196/Banner-1-sweets-23.jpg" style="height:400px" class="d-block w-100" alt="">
    </div>
    <div class="carousel-item">
      <img src="https://clubmahindra.gumlet.io/blog/media/section_images/indianswee-1d6c73cf8e0e93d.jpg?w=480&dpr=2.6" style="height:400px; text-align:center;" class="d-block w-80" alt="">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<br />
<p style="color: #7c795d; font-family: 'Trocchi', serif; font-size: 35px; font-weight: normal; line-height: 48px; margin: 0; text-align:center;"> Mouth Watering Foods</p>

@{
    ViewData["Title"] = "Index";
}

  <table class="table">
    <thead>
    </thead>
    <tbody>

@foreach (var item in Model) {

            <th>
                <img src="~/@item.imgpath" width="200" height="200">
            <br>
                <div style="display:flex ;text-align:left; padding-left :50px">
                @Html.DisplayFor(modelItem => item.prodName)
                <br>
                ₹@Html.DisplayFor(modelItem => item.price)
                <br>
                @Html.DisplayFor(modelItem => item.description)
            </div>
            </th>
}
    </tbody>
</table>
    